{% extends 'base.html.twig' %}

{% block title %}Search Results!
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Word search results " {{ word }} "</h1>
		<div class="row">
			{% for product in products %}
				<div class="col-md-3 mt-4">
					<div class="card" style="width:18rem;">
						<img src="{{asset('uploads/images/'~product.image)}}" class="card-img-top" alt="">
						<div class="card-body">
							<a href="{{path('app_show', {'id':product.id})}}">
							<h5 class="card-title">{{ product.name }}</h5>
                            </a>
							<p class="card-text">{{ product.description|slice(0,60) }}..</p>
                            <h3>{{product.price}} DNT</h3>
							<a href="{{path('app_cart_new',{'id': product.id})}}" class="text-success">Ajouter au panier</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div><br>
	</div>
{% endblock %}
