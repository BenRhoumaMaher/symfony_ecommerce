<style>
	table {
		width: 100%;
		border-collapse: collapse;
	}
	th,
	td {
		border: 1px solid #ddd;
		padding: 8px;
		text-align: left;
	}
	thead {
		background: #f2f2f2;
	}
	tbody tr:nth-child(odd) {
		background: #f9f9f9;
	}
</style>
<div class="container">
	<h2>facture n: {{order.id}}</h2>
    <hr>
	<span>Date: {{order.createdAt|date}}</span>
    <br><br><br>
	<span>Informations du client</span>
	<table class="table table-borderd">
		<tr>
			<th>nom</th>
			<th>prenom</th>
			<th>telephone</th>
			<th>adresse</th>
			<th>ville</th>
		</tr>
		<tr>
			<td>{{order.firstName}}</td>
			<td>{{order.lastName}}</td>
			<td>{{order.phone}}</td>
			<td>{{order.adresse}}</td>
			<td>{{order.city.name}}</td>
		</tr>
	</table>
    <h5>Corps de la commande</h5>
	<table class="table table-borderd">
		<thead>
			<tr>
				<th>Nom du produit</th>
				<th>Prix unitaire</th>
				<th>quantité</th>
				<th>prix total</th>
			</tr>
		</thead>
		{% for product in order.orderProducts %}
			<tr>
				<td>{{product.product.name}}</td>
				<td>{{product.product.price}}
					Dt</td>
				<td>{{product.qte}}</td>
				<td>{{product.product.price*product.qte}}
					Dt</td>
			</tr>
		{% endfor %}
	</table>
    <br><br><br>
	<h5>Frais de livraison :
		{{order.city.shippingCost}}
		Dt</h5>
	<hr>
	<h2>Total à payer :
		{{order.totalPrice}}
		Dt</h2>
</div>
