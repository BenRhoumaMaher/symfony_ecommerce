<style>
	table {
		width: 100%;
		border-collapse: collapse;
	}
	th,
	td {
		border: 1px solid #ddd;
		padding: 8px;
		text-align: left;
	}
	thead {
		background: #f2f2f2;
	}
	tbody tr:nth-child(odd) {
		background: #f9f9f9;
	}
</style>
<div class="container">
	<h2>{{ 'Facture N'|trans }}:
		{{order.id}}</h2>
	<hr>
	<span>{{ 'Date'|trans }}:	
	{{order.createdAt|date}}</span>
	<br>
	<h5>{{ 'Client informations'|trans }}</h5>
	<table class="table table-borderd">
		<thead>
			<th>{{ 'name'|trans }}</th>
			<th>{{ 'lastname'|trans }}</th>
			<th>{{ 'phone'|trans }}</th>
			<th>{{ 'adress'|trans }}</th>
			<th>{{ 'city'|trans }}</th>
		</thead>
		<tr>
			<td>{{order.firstName}}</td>
			<td>{{order.lastName}}</td>
			<td>{{order.phone}}</td>
			<td>{{order.adresse}}</td>
			<td>{{order.city.name}}</td>
		</tr>
	</table>
	<span>{{ 'Order body'|trans }}</span>
	<table class="table table-borderd">
		<thead>
			<th>{{ 'Product name'|trans }}</th>
			<th>{{ 'Unity price'|trans }}</th>
			<th>{{ 'quantity'|trans }}</th>
			<th>{{ 'total price'|trans }}</th>
		</thead>
		{% for product in order.orderProducts %}
			 <tr>
                <td>{{product.product.name}}</td>
                <td>{{product.product.price}} Dt</td>
                <td>{{product.qte}}</td>
                <td>{{product.product.price*product.qte}} Dt</td>
                </tr>
		{% endfor %}
	</table>
	<h5>{{ 'Delivery costs'|trans }} :
		{{order.city.shippingCost}}
		Dt</h5>
	<hr>
	<h2>{{ 'Total to pay'|trans }} :
		{{order.totalPrice}}
		Dt</h2>
</div>