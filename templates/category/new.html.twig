{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="form">
        <br>
        <h2>{{ 'Add new category'|trans }}</h2>
        <br>
        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'class': 'form form-control'}}) }}
        <br>
        <input type="submit" value="{{ 'save'|trans }}" class="btn btn-primary">
        <input type="button" value="{{ 'cancel'|trans }}" onclick="window.location.href='/admin/category';" class="btn btn-secondary">
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}