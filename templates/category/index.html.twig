{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
{% include('layouts/_flash_message.html.twig') %}

<style>
    .table-container {
        margin: 0 auto;
        width: 80%;
        max-width: 1000px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f4f4f4;
        font-weight: bold;
    }
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    tr:hover {
        background-color: #f1f1f1;
    }
    .btn-outline-primary {
        display: inline-block;
        margin-top: 20px;
    }
</style>

<div class="table-container mt-5">
    <table>
        <tr>
            <th>id</th>
            <th>Name of Category</th>
            <th>Action</th>
        </tr>
		{% set counter = 1 %}
        {% for category in categories %}
            <tr>
                <td>{{ counter }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_update', {'id': category.id}) }}" style="text-decoration: none;">
                        Modify
                    </a>
                    |
                    <a onclick="return confirm('are you sure you want to delete this category ?')" href="{{ path('app_category_delete', {'id': category.id}) }}" class="text-danger" style="text-decoration: none;">Remove</a>
                </td>
            </tr>
			{% set counter = counter + 1 %}
        {% else %}
            <tr>
                <td colspan="3">No categories to display at the moment</td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('app_category_new') }}" class="btn btn-outline-primary">Add</a>
</div>

{% endblock %}
