{% extends 'base.html.twig' %}

{% block title %}{{ 'SubCategory index'|trans }}{% endblock %}

{% block body %}
<style>
    .table-container {
        margin: 0 auto;
        width: 80%;
        max-width: 1000px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f4f4f4;
        font-weight: bold;
    }
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    tr:hover {
        background-color: #f1f1f1;
    }
    .btn-outline-primary {
        display: inline-block;
        margin-top: 20px;
    }
</style>
<div class="table-container mt-5 mb-5">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Category'|trans }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set counter = 1 %}
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ counter }}</td>
                <td>{{ sub_category.name }}</td>
                <td>{{ sub_category.category.name }}</td>
                <td>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" style="text-decoration: none;" class="text-primary">{{ 'Modify'|trans }}</a>
                    <a onclick="return confirm('are you sure you want to delete this subcategory ?')" href="{{ path('app_sub_category_delete', {'id': sub_category.id}) }}" class="text-danger" style="text-decoration: none;">{{ 'Remove'|trans }}</a>
                </td>
            </tr>
            {% set counter = counter + 1 %}
        {% else %}
            <tr>
                <td colspan="3">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sub_category_new') }}" class="btn btn-outline-primary">{{ 'Create new'|trans }}</a>
</div>
{% endblock %}
