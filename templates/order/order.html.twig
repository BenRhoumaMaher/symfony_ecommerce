{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Order</h1>
        {% include 'layouts/_flash_message.html.twig' %}
        {% for order in orders %}
        <h2>Order N: {{order.id}}</h2>
        {% if order.isCompleted == true %}
        <h4 class="text-success">Order delivered : {{order.createdAt|date}}</h4>
        {% else %}
        <h4 class="text-danger">Undelivered Order {{order.createdAt|date}}</h4>
        {% endif %}
        <span>Client Informations</span>
        <table class="table table-borderd">
        <tr>
        <th>name</th>
        <th>lastname</th>
        <th>phone</th>
        <th>adress</th>
        <th>city</th>
        </tr>
        <tr>
        <td>{{order.firstName}}</td>
        <td>{{order.lastName}}</td>
        <td>{{order.phone}}</td>
        <td>{{order.adresse}}</td>
        <td>{{order.city.name}}</td>
        </tr>
        </table>
        <span>Order body</span>
        <table class="table table-borderd">
            <tr>
            <th>product picture</th>
            <th>name of the product</th>
            <th>Description</th>
            <th>Unit price</th>
            <th>quantity</th>
            <th>total price</th>
            </tr>
            {% for product in order.orderProducts %}
                <tr>
                <td><img style="width: 80px" src="{{asset('uploads/images/'~product.product.image)}}" alt=""></td>
                <td>{{product.product.name}}</td>
                <td>{{product.product.description|slice(0,40)}}</td>
                <td>{{product.product.price}} Dt</td>
                <td>{{product.qte}}</td>
                <td>{{product.product.price*product.qte}} Dt</td>
                </tr>
            {% endfor %}
        </table>
        <h5>Delivery costs : {{order.city.shippingCost}} Dt</h5>
        <h5>Total to pay : {{order.totalPrice}} Dt</h5>
        <a class="btn btn-outline-success" href="{{path('app_bill',{'id':order.id })}}">Print the bill</a>
        {% if order.isCompleted != true %}
        <a href="{{path('app_orders_is_completed_update',{'id':order.id})}}" class="btn btn-outline-primary col-2 m-lg-1">Mark as delivered</a>
        {% endif %}
        <a onclick="return confirm('voulez vous vraiment supprimer cette commande')" href="{{path('app_orders_remove',{'id':order.id})}}" class="btn btn-outline-danger col-2 m-lg-1">delete the order</a>
        <hr>
        {% endfor %}
        {{knp_pagination_render(orders,'layouts/pagination_template.html.twig')}}
    </div>
{% endblock %}